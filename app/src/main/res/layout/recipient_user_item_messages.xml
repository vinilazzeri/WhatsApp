<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/text_recipient_user_chat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/recipient_user_background"
        android:padding="8dp"
        android:text="hi vini"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_recipient_user_time"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/text_recipient_user_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:text="00:00"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_recipient_user_chat"
        app:layout_constraintEnd_toEndOf="@+id/text_recipient_user_chat"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/text_recipient_user_chat" />
</androidx.constraintlayout.widget.ConstraintLayout>